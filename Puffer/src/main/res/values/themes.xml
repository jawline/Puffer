<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.SecurityWall" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorBackground">@color/background</item>

        <item name="colorBorder">@color/border</item>
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryVariant">#666666</item>
        <item name="colorOnPrimary">@color/black</item>

        <item name="colorSecondary">@color/white</item>
        <item name="colorSecondaryVariant">#666666</item>
        <item name="colorOnSecondary">#666666</item>

        <!-- Secondary brand color. -->
        <item name="colorAccent">@color/teal_700</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/cardview_light_background
        </item>
        <!-- Customize your theme here. -->
        <item name="android:windowLightStatusBar">true</item>
        <item name="sleeping">@drawable/ic_sleeping_light</item>
        <item name="awake">@drawable/ic_awake_light</item>
        <item name="dialogPreferredPadding">10dp</item>
    </style>
</resources>